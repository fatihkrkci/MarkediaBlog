@model SocialMediaAccount

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Author/Views/Shared/_AuthorLayout.cshtml";
}

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Sosyal Medya Hesaplarım</h3>
                <p class="text-subtitle text-muted">Bu sayfadan  Sosyal Medya Hesabınıza ait bilgileri güncelleyebilirsiniz.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Istatistik/Index/">Yazar Paneli</a></li>
                        <li class="breadcrumb-item"><a href="/Kategori/Index">Sosyal Medya</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Düzenle</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section>
        <div class="card">
            <div class="card-header" style="padding-bottom:0">
                <h4 class="card-title">Yeni Sosyal Medya Hesabı Bilgilerini Güncelle</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form method="post" class="form form-vertical">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group has-icon-left">
                                        <label for="first-name-icon">Sosyal Medya Platformu</label>
                                        <div class="position-relative">
                                            <input type="hidden" asp-for="SocialMediaAccountId" />
                                            <input type="text" asp-for="Name" class="form-control"
                                                   placeholder="Sosyal Medya Platformunun adını yazınız"
                                                   id="first-name-icon">
                                            <div class="form-control-icon">
                                                <i class="bi bi-fonts"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group has-icon-left">
                                        <label for="first-name-icon">Hesap Linki</label>
                                        <div class="position-relative">
                                            <input type="text" asp-for="Url" class="form-control"
                                                   placeholder="Görsel linkini buraya yapıştırın"
                                                   id="first-name-icon">
                                            <div class="form-control-icon">
                                                <i class="bi bi-link-45deg"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="first-name-icon">İkon</label>
                                        <div class="position-relative">
                                            <input type="text" asp-for="Icon" class="form-control"
                                                   placeholder="Yazı başlığını yazın"
                                                   id="first-name-icon">
                                            <div class="form-control-icon">
                                                <i class="bi bi-card-image"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit"
                                            class="btn btn-primary me-1 mb-1">
                                        Ekle
                                    </button>
                                    <button type="reset"
                                            class="btn btn-light-secondary me-1 mb-1">
                                        Vazgeç
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>