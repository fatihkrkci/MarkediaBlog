@model UserEditViewModel

@{
    ViewData["Title"] = "EditMyProfile";
    Layout = "~/Areas/Author/Views/Shared/_AuthorLayout.cshtml";
}

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Profilim</h3>
                <p class="text-subtitle text-muted">Bu sayfadan bilgilerinizi görüntüleyebilir ve güncelleyebilirsiniz.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Istatistik/Index/">Yazar Paneli</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Profilim</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section>
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Kişisel Bilgilerim</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form class="form form-vertical" method="post">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group has-icon-left">
                                        <label for="first-name-icon">Ad</label>
                                        <div class="position-relative">
                                            <input type="text" class="form-control" asp-for="Name" id="first-name-icon">
                                            <div class="form-control-icon">
                                                <i class="bi bi-person"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group has-icon-left">
                                        <label for="first-name-icon">Soyad</label>
                                        <div class="position-relative">
                                            <input type="text" class="form-control" asp-for="Surname" id="first-name-icon">
                                            <div class="form-control-icon">
                                                <i class="bi bi-people"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group has-icon-left">
                                        <label for="email-id-icon">Kullanıcı Adı</label>
                                        <div class="position-relative">
                                            <input type="text" class="form-control" asp-for="Username" id="email-id-icon">
                                            <div class="form-control-icon">
                                                <i class="bi bi-person-badge"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group has-icon-left">
                                        <label for="email-id-icon">E-Posta Adresi</label>
                                        <div class="position-relative">
                                            <input type="text" class="form-control" asp-for=Email id="email-id-icon">
                                            <div class="form-control-icon">
                                                <i class="bi bi-envelope"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="password-id-icon">Şifre</label>
                                        <div class="position-relative">
                                            <input type="password" class="form-control" asp-for="Password" id="password-id-icon">
                                            <div class="form-control-icon">
                                                <i class="bi bi-lock"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary me-1 mb-1">Kaydet</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>