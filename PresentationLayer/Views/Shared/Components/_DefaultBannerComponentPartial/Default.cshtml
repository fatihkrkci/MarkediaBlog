@model Article

<section id="cta" class="section" style="background: rgba(0, 0, 0, 0) url(@Model.ImageUrl) no-repeat scroll center center / cover !important; position: relative;">
    <style>
        #cta::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        #cta .container {
            position: relative;
            z-index: 2;
        }

        #cta h2, #cta p, #cta a {
            color: white;
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 align-self-center">
                <h2>@Model.Title</h2>
                <p class="lead"> @Model.Content.Substring(0, 100)...</p>
                <a href="/Default/ArticleDetail/@Model.ArticleId" class="btn btn-warning">Devamını Oku</a>
            </div>
        </div>
    </div>
</section>
