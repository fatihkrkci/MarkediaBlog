@model Article
@{
    ViewData["Title"] = "ArticleDetail";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
<br /><br />
<section class="section lb">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <div class="page-wrapper">
                    <div class="blog-title-area">

                        <span class="color-yellow"><a href="/Category/GetCategoryWithArticle/@Model.CategoryId" title="">@Model.Category.Name</a></span>

                        <h3>@Model.Title</h3>

                        <div class="blog-meta big-meta">
                            <small><a href="#" title="">@Model.CreatedAt.ToString("dd.MM.yyyy")</a></small>
                            <small><a href="/Author/Profile/@Model.AppUserId" title="">@Model.AppUser.Name @Model.AppUser.Surname</a></small>
                            <small><a href="#" title=""><i class="fa fa-eye"></i> @Model.ViewCount</a></small>
                        </div><!-- end meta -->
                    </div><!-- end title -->

                    <div class="single-post-media">
                        <img src="@Model.ImageUrl" alt="" class="img-fluid">
                    </div><!-- end media -->

                    <div class="blog-content">
                        <p>@Model.Content</p>
                    </div><!-- end content -->

                    <div class="blog-title-area">
                        <div class="tag-cloud-single">
                            <span>Tags</span>
                            <small><a href="#" title="">lifestyle</a></small>
                            <small><a href="#" title="">colorful</a></small>
                            <small><a href="#" title="">trending</a></small>
                            <small><a href="#" title="">another tag</a></small>
                        </div><!-- end meta -->

                    </div><!-- end title -->

                    <hr class="invis1">

                    <div class="custombox authorbox clearfix">
                        <h4 class="small-title">Yazar Hakkında</h4>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                <img src="@Model.AppUser.ImageUrl" alt="" class="img-fluid rounded-circle">
                            </div><!-- end col -->

                            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                <h4><a href="#">@Model.AppUser.Name @Model.AppUser.Surname</a></h4>
                                <p>@Model.AppUser.About</p>

                                <div class="topsocial">
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Facebook"><i class="fa fa-facebook"></i></a>
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Youtube"><i class="fa fa-youtube"></i></a>
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Pinterest"><i class="fa fa-pinterest"></i></a>
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Twitter"><i class="fa fa-twitter"></i></a>
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Instagram"><i class="fa fa-instagram"></i></a>
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Website"><i class="fa fa-link"></i></a>
                                </div><!-- end social -->

                            </div><!-- end col -->
                        </div><!-- end row -->
                    </div><!-- end author-box -->


                    <hr class="invis1">

                    @await Component.InvokeAsync("_CommentListByArticleIdComponentPartial")

                    <hr class="invis1">

                    <div class="custombox clearfix">
                        <h4 class="small-title">Leave a Reply</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <form class="form-wrapper">
                                    <input type="text" class="form-control" placeholder="Your name">
                                    <input type="text" class="form-control" placeholder="Email address">
                                    <input type="text" class="form-control" placeholder="Website">
                                    <textarea class="form-control" placeholder="Your comment"></textarea>
                                    <button type="submit" class="btn btn-primary">Submit Comment</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div><!-- end page-wrapper -->
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                <div class="sidebar">
                    @await Component.InvokeAsync("_DefaultNewsletterComponentPartial")
                    @await Component.InvokeAsync("_DefaultLast3ArticleComponentPartial")
                    @await Component.InvokeAsync("_DefaultCategoryListComponentPartial")
                </div><!-- end sidebar -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</section>

